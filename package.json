{
  "name": "server",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "ts-node server.ts",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --ssrManifest --outDir dist/client",
    "build:server": "vite build --ssr src/entry-server.tsx --outDir dist/server",
    "preview": "cross-env NODE_ENV=production ts-node server.ts",

    "lint": "eslint --ext ts,.tsx src",
    "lint:fix": "eslint --fix --ext .js,.jsx,.ts,.tsx src",
    "prettier": "prettier --check --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "prettier:fix": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",

    "test:vitest": "vitest run --coverage",

    "cypress:open": "cypress open",
    "cypress:run": "cypress run --e2e",
    "cypress:report": "npx nyc report && npx nyc report --reporter=text-summary",
    "cypress:e2e": "npx start-server-and-test dev http-get://localhost:5173 cypress:run",
    "test:cypress": "npm run cypress:e2e && npm run cypress:report",

    "test:all": "npm run test:vitest && npm run test:cypress"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.3",
    "@types/react-redux": "^7.1.25",
    "compression": "^1.7.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-cypress": "^2.13.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "express": "^4.18.2",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "nyc": "^15.1.0",
    "prettier": "^2.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.43.9",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.0.0",
    "redux": "^4.2.1",
    "sirv": "^2.0.2",
    "vite-plugin-svgr": "^2.4.0"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.10.4",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/compression": "^1.7.2",
    "@types/cypress__code-coverage": "^3.10.0",
    "@types/express": "^4.17.17",
    "@types/node": "^18.16.0",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "@vitejs/plugin-react": "^3.0.1",
    "@vitest/coverage-c8": "^0.29.3",
    "@vitest/coverage-istanbul": "^0.29.3",
    "cross-env": "^7.0.3",
    "cypress": "^12.11.0",
    "eslint": "^8.36.0",
    "eslint-plugin-react": "^7.32.2",
    "jsdom": "^21.1.1",
    "msw": "^1.2.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "vite": "^4.0.4",
    "vitest": "^0.29.5",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^2.8.4",
    "start-server-and-test": "^2.0.0",
    "vite-plugin-istanbul": "^4.0.1"
  }
}
